# Supabase PostgreSQL connection string (Project Settings → Database → Connection string URI)
DATABASE_URL=postgresql://postgres:password@db.xxxx.supabase.co:5432/postgres

# Supabase project settings (from Project Settings → API)
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_PUBLISHABLE_KEY=eyJ...

# Flask environment (development or production)
FLASK_ENV=development

# Frontend build-time variables (Vite injects via import.meta.env)
VITE_SUPABASE_URL=https://xxxx.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=eyJ...

# Scraper configuration (optional — defaults shown)
# SCRAPER_REQUEST_TIMEOUT=15
# SCRAPER_BROWSER_TIMEOUT=30000
# SCRAPER_CACHE_TTL=300
# SCRAPER_THIN_THRESHOLD=50
